{
    "$schema": "http://json-schema.org/draft-07/schema",    
    "type": "object",
    "properties": {
        "message": { "type": "string" },
        "errors": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "resource": { "type": "string" },
                    "field": { "type": "string" },
                    "code": { "type": "string" }
                },
                "required": [
                    "resource",
                    "field",
                    "code"
                ]
            }
        }
    },
    "required": [
        "message",
        "errors"
    ]
}
